generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Jeu {
  id          Int      @id @default(autoincrement())
  titre       String
  desc        String
  date        DateTime
  miseEnAvant Boolean  @default(false)

  // Relation 1-n avec Editeur
  idediteur   Int
  editeur     Editeur  @relation(fields: [idediteur], references: [id])

  // Relation n-n avec Genre
  genres      Genre[]  @relation("JeuGenres")
}

model Genre {
  id    Int    @id @default(autoincrement())
  nom   String @unique

  // Relation n-n avec Jeu
  jeux  Jeu[]  @relation("JeuGenres")
}

model Editeur {
  id    Int    @id @default(autoincrement())
  nom   String @unique

  // Relation 1-n avec Jeu
  jeux  Jeu[]
}
